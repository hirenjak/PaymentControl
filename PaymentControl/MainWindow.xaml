<Window x:Class="PaymentControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaymentControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="570" MaxWidth="570" MinWidth="570">

    <Window.Resources>
        <Style TargetType="{x:Type ListView}">
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListViewItem">
                        <Setter Property="VerticalContentAlignment" Value="Top"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="ListImageTemplate">
            <StackPanel HorizontalAlignment="Left" Width="60">
                <Image Source="{Binding picture}" Width="50" Height="50"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="ListDataTemplate">
            <StackPanel Margin="0,0,0,0">
                <DockPanel Margin="0,0,0,0" Width="Auto" LastChildFill="True">
                    <TextBlock Text="商品名 : " Foreground="White" />
                    <TextBlock Text="{Binding name}" Width="150" Foreground="White"/>

                    <TextBlock Text="種別: " Foreground="White"/>
                    <TextBlock Text="{Binding kind}" Foreground="White"/>
                </DockPanel>
                
                <DockPanel Margin="0,0,0,0" Width="Auto" LastChildFill="True">
                    <TextBlock Text="価格 : \" Foreground="White"/>
                    <TextBlock Text="{Binding price}" Width="75" Foreground="White"/>

                    <TextBlock Text="現状 : " Foreground="White" />
                    <TextBlock Text="{Binding status}" Width="75" Foreground="White"/>

                    <TextBlock Text="優先度 : " Foreground="White"/>
                    <TextBlock Text="{Binding priority}" Width="75" Foreground="White"/>
                </DockPanel>
                


                <DockPanel Margin="0,0,0,0" Width="Auto" LastChildFill="True">
                    <TextBlock Text="料金体制 : " Margin="0,0,0,0" Foreground="White"/>
                    <TextBlock Text="{Binding system}" Margin="0,0,10,0" Foreground="White" Width="40"/>

                    <TextBlock Text="備考 : " Margin="0,0,0,0" Foreground="White"/>
                    <TextBlock Text="{Binding supplemental}" Margin="0,0,10,0" Foreground="White"/>
                </DockPanel>
            </StackPanel>
        </DataTemplate>

        <ContextMenu x:Key="ItemContextMenu">
            <MenuItem Header="編集" Click="MenuItem_Click"/>
        </ContextMenu>

        <Style x:Key="myHedderStyle" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>


    </Window.Resources>
    <DockPanel  Background="Gray" Width="Auto" HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Stretch" >


        <TabControl x:Name="tabControl" DockPanel.Dock="Top" VerticalAlignment="Top" Margin="0,0,0,0" Height="Auto" Background="DarkGray" >
            <TabItem Header="追加・編集">
                <StackPanel>
                    <DockPanel Margin="0,5,0,0" LastChildFill="True">
                        <Button x:Name="button" Content="画像選択" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="button_PictSelect_Click"/>
                        <TextBox x:Name="pictureAddressBox" Margin="5,0,0,0" HorizontalAlignment="Left" Width="120" IsReadOnly="True"  Background="Gray" Foreground="White"/>

                        <ComboBox x:Name="kindBox"  SelectedIndex="0" Text="道具" Height="23" VerticalAlignment="Top" Margin="5,0,0,0" Width="120" Background="Gray" Foreground="White" />
                        <ComboBox x:Name="priorityBox" SelectedIndex="2" Text="中" Height="23" VerticalAlignment="Top" Margin="5,0,0,0" Width="60" Background="Gray" Foreground="White"/>
                        <ComboBox x:Name="statusBox" SelectedIndex="0"  Text="検討中" Height="23" VerticalAlignment="Top" Margin="5,0,0,0" Width="80" Background="Gray" Foreground="White"/>
                        <ComboBox x:Name="systemBox" SelectedIndex="0" Text="買切り" Height="23" VerticalAlignment="Top" Margin="5,0,5,0" Width="Auto" Background="Gray" Foreground="White" />
                        
                    </DockPanel>

                    <DockPanel Margin="0,5,0,0" LastChildFill="True">
                        <TextBox x:Name="nameBox"  Text="nameBox" Height="23" VerticalAlignment="Top" Margin="5,0,0,0" Width="120" Background="Gray" Foreground="White"/>
                        <TextBox x:Name="priceBox"  Text="0" Height="23" Width="50" VerticalAlignment="Top" Margin="5,0,0,0" Background="Gray" Foreground="White"/>
                        <TextBox x:Name="supplementalBox" Width="Auto" Text="supplementalBox" Height="23" VerticalAlignment="Top" Margin="5,0,5,0" Background="Gray" Foreground="White"/>
                    </DockPanel>

                    <DockPanel Margin="0,5,0,0" LastChildFill="True">
                        <TextBox x:Name="originPageBox"  Text="originPageBox" Height="23" VerticalAlignment="Top" Margin="5,0,0,0" Background="Gray" Foreground="White" Width="260"/>
                        <TextBox x:Name="paymentPageBox"  Text="paymentPageBox" Height="23" VerticalAlignment="Top" Margin="5,0,0,0" Background="Gray" Foreground="White" Width="Auto"/>
                    </DockPanel>

                    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,5,0,5">
                        <Button x:Name="button_Apply"  Content="Apply" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Margin="5,0,0,0" Click="button_Apply_Click" Background="Gray" Foreground="White"/>
                        <Button x:Name="button_Save" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Margin="5,0,0,0" Click="button_Save_Click" Background="Gray" Foreground="White"/>
                    </DockPanel>
                </StackPanel>
            </TabItem>
            
            <TabItem Header="閲覧">
                <StackPanel>
                    <DockPanel Margin="0,5,0,0" LastChildFill="True">
                        <ComboBox x:Name="kindSelectBox"  SelectedIndex="0" Text="" Height="23" VerticalAlignment="Top" Margin="5,0,0,0" Width="120" Background="Gray" Foreground="White" SelectionChanged="SelectBox_SelectionChanged" />
                        <ComboBox x:Name="prioritySelectBox" SelectedIndex="0" Text="" Height="23" VerticalAlignment="Top" Margin="5,0,0,0" Width="60" Background="Gray" Foreground="White" SelectionChanged="SelectBox_SelectionChanged"/>
                        <ComboBox x:Name="statusSelectBox" SelectedIndex="0"  Text="" Height="23" VerticalAlignment="Top" Margin="5,0,0,0" Width="80" Background="Gray" Foreground="White" SelectionChanged="SelectBox_SelectionChanged"/>
                        <ComboBox x:Name="systemSelectBox" SelectedIndex="0" Text="" Height="23" VerticalAlignment="Top" Margin="5,0,5,0" Width="Auto" Background="Gray" Foreground="White" SelectionChanged="SelectBox_SelectionChanged" />
                    </DockPanel>

                    <DockPanel Margin="0,5,0,0" LastChildFill="True">
                        <TextBlock Text="合計金額 : \" Foreground="White"/>
                        <TextBlock Name="totalPriceBox" Text="{Binding totalPrice, UpdateSourceTrigger=PropertyChanged}" Width="Auto" Foreground="White" />
                    </DockPanel>
                </StackPanel>
            </TabItem>
            
            <TabItem Header="設定">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <ComboBox x:Name="kindSettingBox" HorizontalAlignment="Left"  SelectedIndex="0" Text="" Height="23" VerticalAlignment="Top" Margin="5,0,0,0" Width="120" Background="Gray" Foreground="White" SelectionChanged="kindSelectBox_SelectionChanged"/>
                        <Button x:Name="kindSettingDeleteButton" Content="Delete" Width="60" Height="23" Margin="5,0,0,0" Click="SettingDeleteButton_Click"/>
                        <TextBox x:Name="kindSettingText" Width="120" Height="23" Margin="5,0,0,0"/>
                        <Button x:Name="kindSettingAddButton" Content="Add" Width="60" Height="23" Margin="5,0,0,0" Click="kindSettingAddButton_Click"/>
                        <Button x:Name="kindSettingChangeButton" Content="Change" Width="60" Height="23" Margin="5,0,0,0" Click="SettingChangeButton_Click"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <ComboBox x:Name="prioritySettingBox" HorizontalAlignment="Left" SelectedIndex="0" Text="" Height="23" VerticalAlignment="Top" Margin="5,0,0,0" Width="120" Background="Gray" Foreground="White" SelectionChanged="prioritySelectBox_SelectionChanged"/>
                        <Button x:Name="proritySettingDeleteButton" Content="Delete" Width="60" Height="23" Margin="5,0,0,0" Click="SettingDeleteButton_Click"/>
                        <TextBox x:Name="proritySettingText" Width="120" Height="23" Margin="5,0,0,0"/>
                        <Button x:Name="proritySettingAddButton" Content="Add" Width="60" Height="23" Margin="5,0,0,0"  Click="kindSettingAddButton_Click"/>
                        <Button x:Name="proritySettingChangeButton" Content="Change" Width="60" Height="23" Margin="5,0,0,0" Click="SettingChangeButton_Click"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <ComboBox x:Name="statusSettingBox" HorizontalAlignment="Left" SelectedIndex="0"  Text="" Height="23" VerticalAlignment="Top" Margin="5,0,0,0" Width="120" Background="Gray" Foreground="White" SelectionChanged="statusSelectBox_SelectionChanged"/>
                        <Button x:Name="statusSettingDeleteButton" Content="Delete" Width="60" Height="23" Margin="5,0,0,0" Click="SettingDeleteButton_Click"/>
                        <TextBox x:Name="statusSettingText" Width="120" Height="23" Margin="5,0,0,0"/>
                        <Button x:Name="statusSettingAddButton" Content="Add" Width="60" Height="23" Margin="5,0,0,0"  Click="kindSettingAddButton_Click"/>
                        <Button x:Name="statusSettingChangeButton" Content="Change" Width="60" Height="23" Margin="5,0,0,0" Click="SettingChangeButton_Click"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                        <ComboBox x:Name="systemSettingBox" HorizontalAlignment="Left" SelectedIndex="0" Text="" Height="23" VerticalAlignment="Top" Margin="5,0,0,0" Width="120" Background="Gray" Foreground="White" SelectionChanged="systemSelectBox_SelectionChanged"/>
                        <Button x:Name="systemSettingDeleteButton" Content="Delete" Width="60" Height="23" Margin="5,0,0,0" Click="SettingDeleteButton_Click"/>
                        <TextBox x:Name="systemSettingText" Width="120" Height="23" Margin="5,0,0,0"/>
                        <Button x:Name="systemSettingAddButton" Content="Add" Width="60" Height="23" Margin="5,0,0,0"  Click="kindSettingAddButton_Click"/>
                        <Button x:Name="systemSettingChangeButton" Content="Change" Width="60" Height="23" Margin="5,0,0,0" Click="SettingChangeButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>

        
        <ScrollViewer VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Height="Auto">
            <StackPanel VerticalAlignment="Stretch" Height="Auto">
            <ListView ItemsSource="{Binding}" Name="listView"  BorderBrush="Gray" ContextMenu="{DynamicResource ItemContextMenu}" AlternationCount="2" Background="Gray" >
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView ColumnHeaderContainerStyle="{StaticResource myHedderStyle}">
                        <GridViewColumn CellTemplate="{StaticResource ListImageTemplate}"/>
                        <GridViewColumn CellTemplate="{StaticResource ListDataTemplate}"/>
                    </GridView>
                </ListView.View>
            </ListView>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
