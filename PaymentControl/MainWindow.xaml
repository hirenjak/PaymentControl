<Window x:Class="PaymentControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaymentControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Window.Resources>
        <Style TargetType="{x:Type ListView}">
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListViewItem">
                        <Setter Property="VerticalContentAlignment" Value="Top"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="ListImageTemplate">
            <StackPanel HorizontalAlignment="Left" Width="60">
                <Image Source="{Binding picture}" Width="50" Height="50"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="ListDataTemplate">
            <StackPanel Margin="0,0,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,0" Width="500">
                    <TextBlock Text="商品名 : " />
                    <TextBlock Text="{Binding name}" Width="150"/>

                    <TextBlock Text="種別: " />
                    <TextBlock Text="{Binding kind}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,0" Width="500">
                    <TextBlock Text="価格 : \"/>
                    <TextBlock Text="{Binding price}" Width="75"/>

                    <TextBlock Text="現状 : " />
                    <TextBlock Text="{Binding status}" Width="75"/>

                    <TextBlock Text="優先度 : " />
                    <TextBlock Text="{Binding priority}" Width="75"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,0" Width="500">
                    <TextBlock Text="料金体制 : " Margin="0,0,0,0"/>
                    <TextBlock Text="{Binding system}" Margin="0,0,10,0"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>

        <ContextMenu x:Key="ItemContextMenu">
            <MenuItem Header="編集" Click="MenuItem_Click"/>
        </ContextMenu>

        <Style x:Key="myHedderStyle" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>


    </Window.Resources>
    <Grid>
        <ListView ItemsSource="{Binding}" Name="listView" Margin="0,98,0,0" BorderBrush="Gray" ContextMenu="{DynamicResource ItemContextMenu}" AlternationCount="2">
            
            
            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{StaticResource myHedderStyle}">
                    <GridViewColumn CellTemplate="{StaticResource ListImageTemplate}"/>
                    <GridViewColumn CellTemplate="{StaticResource ListDataTemplate}"/>
                </GridView>
            </ListView.View>

        </ListView>

        <DockPanel HorizontalAlignment="Left" LastChildFill="False" Width="517" Height="52" VerticalAlignment="Top" Margin="0,46,0,0">
            
        </DockPanel>

        <StackPanel  HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,0" Height="70">
            <StackPanel Orientation ="Horizontal">
                <Button x:Name="button" Content="画像選択" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="button_PictSelect_Click"/>
                <TextBox x:Name="pictureAddressBox" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="Auto" IsReadOnly="True"/>
            </StackPanel>
            <StackPanel Orientation ="Horizontal">
                <ComboBox x:Name="kindBox"  SelectedIndex="0" Text="道具" Height="23" VerticalAlignment="Top" Margin="0,0,0,0" Width="120" />
                <ComboBox x:Name="priorityBox" SelectedIndex="2" Text="中" Height="23" VerticalAlignment="Top" Margin="0,0,0,0" Width="60"/>
                <ComboBox x:Name="statusBox" SelectedIndex="0"  Text="検討中" Height="23" VerticalAlignment="Top" Margin="0,0,0,0" Width="80"/>
                <ComboBox x:Name="systemBox" SelectedIndex="0" Text="買切り" Height="23" VerticalAlignment="Top" Margin="0,0,0,0" Width="60"/>
            </StackPanel>
            <StackPanel Orientation ="Horizontal">
                <TextBox x:Name="nameBox"  Text="nameBox" Height="23" VerticalAlignment="Top" Margin="0,0,0,0" Width="120" />
                <TextBox x:Name="priceBox"  Text="0" Height="23" VerticalAlignment="Top" Margin="0,0,0,0" />
                <TextBox x:Name="supplementalBox"  Text="supplementalBox" Height="23" VerticalAlignment="Top" Margin="0,0,0,0" Width="120" />
                <TextBox x:Name="originPageBox"  Text="originPageBox" Height="23" VerticalAlignment="Top" Margin="0,0,0,0" />
                <TextBox x:Name="paymentPageBox"  Text="paymentPageBox" Height="23" VerticalAlignment="Top" Margin="0,0,0,0" />
            </StackPanel>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,70,0,0">
            <Button x:Name="button_Apply"  Content="Apply" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Margin="5,0,0,0" Click="button_Apply_Click"/>
            <Button x:Name="button_Save" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Margin="5,0,0,0" Click="button_Save_Click"/>
        </StackPanel>
        
    </Grid>

</Window>
